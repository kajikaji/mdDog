[% INCLUDE header.tmpl %]
[% INCLUDE apptitle.tmpl %]
[% INCLUDE userinfo.tmpl %]
<div>[% debug %]</div>

<section class="top">

<div class="top-menu">
  [% IF login %]
    <a href="create.cgi" class="subject">■ドキュメントの新規追加</a>
  [% ELSE %]
    <span class="subject disable">■&ensp;ドキュメントの新規追加</span><span class="caution">(本機能はログインすると使えるようになります)</span>
  [% END %]
</div>
<div class="top-menu">
  [% IF login %]
    <a href="upload_docx.cgi" class="subject">■&ensp;docxドキュメントの登録</a>
  [% ELSE %]
    <span class="subject disable">■&ensp;docxドキュメントの登録</span><span class="caution">(本機能はログインすると使えるようになります)</span>
  [% END %]
</div>

<div class="top-menu">
  <div class="subject">■&ensp;登録ドキュメント一覧</div>
  [% IF infos %]
  <table class="doc-list">
    <tbody>
      [% FOREACH info IN infos %]
      <tr class="[% IF info.is_used %]active[% ELSE %]nonactive[% END %] [% IF info.deleted_at %]deleted[% END %]">
        <td class="info">

          [% UNLESS info.deleted_at %]
          [% IF is_delete || is_admin %]
          <div class="doc-ctrl">
            <form action="" method="post">
              [% IF info.is_used %]
               <input type="submit" name="unuse" value=" " class="glyph ban">
              [% ELSE %]
              <input type="submit" name="use" value=" " class="glyph ok">
              <input type="submit" name="delete" value=" " class="glyph bin">
              [% END %]
              <input type="hidden" name="fid" value="[% info.id %]">
            </form>
          </div>
          [% END %] <!-- IF is_delete || is_admin -->
          [% END %] <!-- UNLESS info.deleted_at -->
          
          <div class="doc-subject">
          [% IF info.deleted_at %]
            <span class="name">[% info.file_name %]</span>
          [% ELSIF info.is_used %]
            <a href="download.cgi?fid=[% info.id %]" class="glyph download-alt"></a>
            <span class="name"><a href="docinfo.cgi?fid=[% info.id %]">[% info.file_name %]</a></span>
          [% ELSE %]
            <a href="download.cgi?fid=[% info.id %]" class="glyph download-alt"></a>
            <span class="name">[% info.file_name %]</span>
          [% END %]
          </div> <!-- doc-subject -->
          <div class="doc-detail">
            <div class="create-at">作成日時：[% info.created_at %]</div>
            <div class="created-by">作成者：</div>
            <div class="last-approved-at">最終承認日時：</div>
            <div class="filesize">最終ファイルサイズ：</div>
          </div>
        </td>
      </tr>
      [% END %]
    </tbody>
  </table>
  [% ELSE %]
  <div class="no-file">
    ファイルは登録されていません
  </div>
  [% END %]
</div><!-- top-menu -->

</section>

</body>
</html>


