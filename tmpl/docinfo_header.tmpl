<div class="Title">
  <span class="Name">[% doc_name %]</span>
  <ul class="MenuIcons">
    <li [%UNLESS SUBMENU %]class="Selected"[%END %]>
      <a href="doc_history.cgi?fid=[% fid %]" class="PopupHelper" data-info="履歴"><span class="typcn typcn-book"></span></a>
    </li>
    <li [%IF SUBMENU == "doc_outline" %]class="Selected"[%END %]>
      <a href="doc_outline.cgi?fid=[% fid %]" class="PopupHelper" data-info="プレビュー"><span class="typcn typcn-printer"></span></a>
    </li>
    [%IF login %]
      [%IF is_edit || is_admin %]
    <li [%SWITCH SUBMENU %][%CASE ["edit_buffer" "edit_image" "edit_source" "edit_upload" "edit_log" "edit_merge"] %]class="Selected"[% END %]>
      <a href="edit_buffer.cgi?fid=[% fid %]" class="PopupHelper" data-info="編集"><span class="typcn typcn-edit"></span></a>
    </li>
      [%END %]
      [%IF is_approve || is_admin %]
    <li [%IF SUBMENU == "doc_approve" %]class="Selected"[%END %]>
      <a href="doc_approve.cgi?fid=[% fid %]" class="PopupHelper" data-info="承認"><span class="typcn typcn-input-checked"></span></a>
    </li>
      [%END %]
      [%IF is_owned || is_admin %]
    <li [%IF SUBMENU == "doc_setting" %]class="Selected"[%END %]>
      <a href="doc_setting.cgi?fid=[% fid %]" class="PopupHelper" data-info="設定"><span class="typcn typcn-cog-outline"></span></a>
    </li>
      [%END %]
    [%END %]
  </ul>
</div>
              
<ul class="Tags">
  [%IF is_public %]<li class="Public"><div>public</div></li>[%END %]
  [%IF is_approve %]<li class="Approver"><div>approver</div></li>[%END %]
  [%IF is_edit %]<li class="Editable"><div>editable</div></li>[%END %]
</ul>

<div class="Description">
  <div class="">[<a href="download.cgi?fid=[% fid %]">最新版DL</a>]</div>
  <div class="CreatedAt">作成日時:[% created_at %]</div>
  <div class="CreatedBy">管理者:[% created_by %]</div>
  <div class="LastApprovedAt">最終承認日時:[% last_updated_at %]</div>
  <div class="Filesize">ファイルサイズ:[% file_size %]byte</div>
</div>

